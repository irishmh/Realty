<h1>Editing role_permission</h1>

<% form_for(@role_permission) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :role_id %><br />
    <!--%= f.text_field :role_id %-->
    <%= f.select(:role_id, Role.all.collect{|t| [t.role_desc, t.id]}, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.label :permission_id %><br />
    <!--%= f.text_field :permission_id %-->
    <%= f.select(:permission_id, Permission.all.collect{|t| [t.permission_desc, t.id]}, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.label :created_userid %><br />
    <%= f.text_field :created_userid %>
  </p>
  <p>
    <%= f.label :last_updt_userid %><br />
    <%= f.text_field :last_updt_userid %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

