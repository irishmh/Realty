<h1>Edit Demographics</h1>
<title>Demographics: <%= controller.action_name %></title>
<%= stylesheet_link_tag 'scaffold', 'realty' %>

<% form_for(@demo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :role_id %><br />
    <%= f.select(:role_id, RoleType.all.collect{|t| [t.role_desc, t.id]}, {:include_blank => true}) %>
    </select>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :addr %><br />
    <%= f.text_field :addr %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state_id %><br />
    <%= f.select(:state_id, State.all.collect{|t| [t.state_cd, t.id]}, {:include_blank => true}) %>
    </select>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @demo %> |
<%= link_to 'Back', demos_path %>