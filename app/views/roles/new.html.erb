<h1>New Role</h1>

<% form_for(@role) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :role_type_id %><br />
    <!--%= f.text_field :role_type_id %-->
    <%= f.select(:role_type_id, RoleType.all.collect{|t| [t.role_desc, t.id]}, {:include_blank => true}) %>
    </select>
  </p>
  <p>
    <%= f.label :role_desc %><br />
    <%= f.text_field :role_desc %>
  </p>
  <p>
    <%= f.label :created_userid %><br />
    <%= f.text_field :created_userid %>
  </p>
  <p>
    <%= f.label :last_updt_userid %><br />
    <%= f.text_field :last_updt_userid %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', roles_path %>