<h1>Editing contact</h1>
<title>Contacts: <%= controller.action_name %></title>
<%= stylesheet_link_tag 'scaffold', 'realty' %>

<% form_for(@contact) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :contact_type_id %><br />
    <%= f.select(:contact_type_id, ContactType.all.collect{|t| [t.contact_type_desc, t.id]}, {:include_blank => true}) %>
    </select>
  </p>
  <p>
    <%= f.label :contact_data %><br />
    <%= f.text_field :contact_data %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @contact %> |
<%= link_to 'Back', contacts_path %>